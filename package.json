{
  "name": "vutter-api",
  "version": "1.0.0",
  "description": "é um simples repositório para gerenciar ferramentas com seus respectivos nomes, links, descrições e tags.",
  "main": "index.js",
  "scripts": {
    "lint": "standard src tests",
    "lint:staged": "lint-staged",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:dev": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersongns/vutter-api.git"
  },
  "author": "Anderson Santos <anderson.santos@tuta.io> (https://andersongns.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andersongns/vutter-api/issues"
  },
  "homepage": "https://github.com/andersongns/vutter-api#readme",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "standard": "^16.0.3"
  }
}
